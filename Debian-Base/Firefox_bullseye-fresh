ARG COSHAPP_BASE_VERSION
FROM coshapp/core:bullseye-${COSHAPP_BASE_VERSION:-11.0}

RUN apt-get install -y gpg
RUN apt-get clean all
WORKDIR /home/duser
USER duser
RUN curl -L https://archive.mozilla.org/pub/firefox/releases/91.0esr/KEY | gpg --import -
RUN curl -sL https://archive.mozilla.org/pub/firefox/releases/91.0esr/linux-x86_64/en-US/firefox-91.0esr.tar.bz2.asc > firefox-91.0esr.tar.bz2.asc
RUN curl -sL https://archive.mozilla.org/pub/firefox/releases/91.0esr/linux-x86_64/en-US/firefox-91.0esr.tar.bz2 > firefox-91.0esr.tar.bz2
RUN gpg --verify firefox-91.0esr.tar.bz2.asc
RUN tar xjf firefox-91.0esr.tar.bz2
ENV PATH=/home/duser/firefox:$PATH

CMD /bin/sh
