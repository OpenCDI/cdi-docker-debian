ARG coshapp_ver
FROM debian:${coshapp_ver:-10.7}
label maintainer="Okadarien Saru <okadas@dev.sysnk.net>"

RUN apt-get update
RUN apt-get install -y apt-transport-https ca-certificates openssl
RUN sed -r -i -e s@deb\ http://deb@deb\ https://deb@g /etc/apt/sources.list
RUN apt-get install -y mate
RUN apt-get install -y pulseaudio
RUN apt-get install -y sudo
RUN apt-get install -y locales locales-all
RUN apt-get install -y fonts-noto-mono fonts-noto-cjk fonts-noto-cjk-extra fonts-noto-color-emoji
RUN apt-get install -y curl gpg

RUN apt-get clean all

RUN useradd -m duser
USER duser
WORKDIR /home/duser
RUN curl -L https://archive.mozilla.org/pub/firefox/releases/84.0/KEY | gpg --import -
RUN curl -sL https://archive.mozilla.org/pub/firefox/releases/84.0/linux-x86_64/ja/firefox-84.0.tar.bz2.asc > firefox-84.0.tar.bz2.asc
RUN curl -sL https://archive.mozilla.org/pub/firefox/releases/84.0/linux-x86_64/ja/firefox-84.0.tar.bz2 > firefox-84.0.tar.bz2
RUN gpg --verify firefox-84.0.tar.bz2.asc
RUN tar xjf firefox-84.0.tar.bz2
ENV PATH=/home/duser/firefox:$PATH
RUN cp -v /usr/share/zoneinfo/Asia/Tokyo /etc/localtime

CMD /bin/sh
